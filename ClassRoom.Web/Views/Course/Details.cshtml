@model CourseVM

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<div class="container">
    <h2>@Model.Title</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="Course Image" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <p><strong>Thời lượng:</strong> @Model.Duration giờ</p>
            <p><strong>Trình độ:</strong> @Model.Level</p>
            <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
            <p><strong>Lượt đăng ký:</strong> @Model.StudentCount học viên</p>

            <form asp-action="Register" method="post">
                <input type="hidden" name="courseId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Đăng ký khóa học</button>
            </form>

            <!-- Hiển thị nút Tạo Lớp nếu user có role Staff -->
            @* @if (User.IsInRole("Staff")) *@
            @* { *@
                <form asp-controller="Classroom" asp-action="Create" method="get" class="mt-2">
                    <input type="hidden" name="courseId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success">Tạo lớp học</button>
                </form>
            @* } *@
            <!-- Kết thúc phần thêm nút -->

            <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại danh sách</a>
        </div>
    </div>
</div>
