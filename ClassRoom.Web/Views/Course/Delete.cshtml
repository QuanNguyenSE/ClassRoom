@model CourseDeleteViewModel

@{
    ViewData["Title"] = "Xóa khóa học";
}

<h2 class="mb-4 text-danger">Xóa khóa học</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5>Bạn có chắc chắn muốn xóa khóa học này?</h5>
    </div>
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text">@Model.Description</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-thumbnail mb-3" width="250" />
        }

        <p><strong>Trình độ:</strong> @Model.Level</p>
        <p><strong>Số sinh viên đã đăng ký:</strong> @Model.TotalStudents</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Xóa ngay</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
