@model IEnumerable<Classroom>

<h2>Danh Sách Lớp Học</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên lớp</th>
            <th>Khóa học</th>
            <th>Giảng viên</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classroom in Model)
        {
            <tr>
                <td>@classroom.Name</td>
                <td>@classroom.Course.Title</td>
                <td>@classroom.Instructor.FullName</td>
                <td>@classroom.CreatedDate.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
