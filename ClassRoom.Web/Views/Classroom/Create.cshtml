@model ClassroomCreateVM

<h2>Tạo Lớp Học Cho Khóa: @Model.Course.Title</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="CourseId" value="@Model.Course.Id" />

    <div class="mb-3">
        <label class="form-label">Tên Lớp</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Chọn Giảng Viên</label>
        <select class="form-select" asp-for="InstructorId" asp-items="Model.Instructors" required>
            <option value="">-- Chọn giảng viên --</option>
        </select>
    </div>

    <h4>Danh Sách Học Viên Đã Đăng Ký</h4>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Tên</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" asp-for="Students[i].Selected" />
                        <input type="hidden" asp-for="Students[i].StudentId" />
                    </td>
                    <td>@Model.Students[i].FullName</td>
                    <td>@Model.Students[i].Email</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Tạo Lớp</button>
</form>
