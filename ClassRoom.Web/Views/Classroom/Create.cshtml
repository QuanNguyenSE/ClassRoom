@model ClassroomCreateViewModel

<h2>Tạo Lớp Học</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Name">Tên Lớp</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Information">Thông Tin</label>
        <textarea asp-for="Information" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="InstructorId">Giảng viên</label>
        <select asp-for="InstructorId" class="form-control" required>
            @foreach (var instructor in Model.Instructors)
            {
                <option value="@instructor.Id">@instructor.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Chọn Sinh Viên</label>
        <div class="form-check">
            @foreach (var student in Model.Students)
            {
                <input type="checkbox" name="SelectedStudentIds" value="@student.Id" checked class="form-check-input">
                <label class="form-check-label">@student.FullName</label>

                <br>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Tạo Lớp</button>
</form>
