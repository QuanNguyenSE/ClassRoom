<div class="modal fade" id="viewAssignmentModal" tabindex="-1" aria-labelledby="viewAssignmentLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewAssignmentLabel">Assignment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Title:</strong> @Model.Title</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Created By:</strong> @Model.CreatedBy</p>
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <p><strong>File:</strong> <a href="@Url.Content("~/docs/" + Model.FilePath)" target="_blank">Download</a></p>
                }
            </div>
        </div>
    </div>
</div>
