@model SubmissionCreateModel

<h2>Submit Assignment: @ViewBag.AssignmentTitle</h2>
<p>Classroom: @ViewBag.ClassroomName</p>
<p>Due Date: @ViewBag.DueDate.ToString("yyyy-MM-dd HH:mm")</p>

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AssignmentId" />
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="Answer">Your Answer</label>
        <textarea asp-for="Answer" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Upload File (PDF, Word, Images)</label>
        <input type="file" asp-for="File" class="form-control" accept=".pdf,.doc,.docx,.png,.jpg,.jpeg" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
